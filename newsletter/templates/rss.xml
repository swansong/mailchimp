<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/">
    <channel>
        <title>UW Daily Newsletter</title>
        <link>http://www.google.com</link>
        <description>This is the daily UW internal email</description>
    <item>
        <title>The Whole Shebang</title>
        <link>http://www.google.com</link>
        <description>Today's content for the newsletter</description>
        <content:encoded><![CDATA[
            <h1>{{date}}</h1>
            <div style="align:center; text-align:center">
            <table style="width:100%">
                <tr>
                    <td style="width:60%">
                        {% for section,item in left_sections.items %}
                        {% if item %}
                        <div id='section{{section}}' style='margin-bottom:20px; border-bottom:1px solid black;'>
                            <h2>{{item.title}}</h2>
                            <div class='content'>
                                {% if item.image %}
                                <img src='{{item.image.url}}'>
                                {% endif %}
                                {{item.content|safe}}
                            </div>
                        </div>
                        {% endif %}
                        {% endfor %}
                    </td>
                    <td style="width:40%">
                        {% for section,item in right_sections.items %}
                        {% if item %}
                        <div id='section{{section}}' style='margin-bottom:20px; border-bottom:1px solid black;'>
                            <h2>{{item.title}}</h2>
                            <div class='content'>
                                {% if item.image %}
                                <img src='{{item.image.url}}'>
                                {% endif %}
                                {{item.content|safe}}
                            </div>
                        </div>
                        {% endif %}
                        {% endfor %}
                    </td>
                </tr>
            </table>
            </div>
        ]]></content:encoded>
    </item>
    </channel>
</rss>

